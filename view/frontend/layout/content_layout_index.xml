<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <title>
            Layouts for content
        </title>
    </head>
    <body>
        <!-- NORMAL HEAD TITLE IS NOT TRANSLATED -->
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Layouts for content</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout.phtml" name="optimus-content-layout" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout/columns-textonly.phtml" name="optimus-content-layout-columns-textonly" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout/columns-empty.phtml" name="optimus-content-layout-columns-empty" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout/columns-text-images.phtml" name="optimus-content-layout-columns-text-images" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout/callouts.phtml" name="optimus-content-layout-callouts" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout/columns-verticalcenter.phtml" name="optimus-content-layout-columns-verticalcenter" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout/columns-maxwidth.phtml" name="optimus-content-layout-columns-maxwidth" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/layout/centered-icon.phtml" name="optimus-content-layout-centered-icon" />
        </referenceContainer>
    </body>
</page>
